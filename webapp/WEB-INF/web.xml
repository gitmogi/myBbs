<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>myBbs</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>jsonList</servlet-name>
  	<servlet-class>com.bit.bbs.controller.ListController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>jsonList</servlet-name>
  	<url-pattern>/bbs/list.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>jsonInsert</servlet-name>
  	<servlet-class>com.bit.bbs.controller.AddController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>jsonInsert</servlet-name>
  	<url-pattern>/bbs/add.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>jsonOne</servlet-name>
  	<servlet-class>com.bit.bbs.controller.DetailController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>jsonOne</servlet-name>
  	<url-pattern>/bbs/detail.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>jsonUpdate</servlet-name>
  	<servlet-class>com.bit.bbs.controller.EditController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>jsonUpdate</servlet-name>
  	<url-pattern>/bbs/edit.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>jsonDelete</servlet-name>
  	<servlet-class>com.bit.bbs.controller.DelController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>jsonDelete</servlet-name>
  	<url-pattern>/bbs/del.do</url-pattern>
  </servlet-mapping>
  
</web-app>